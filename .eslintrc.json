{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "import/no-unresolved": ["error", { "commonjs": true }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "mjs": "never"
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true,
        "multiline": true
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "never",
        "ignoreDestructuring": true,
        "allow": ["^UNSAFE_", "^[A-Z_]+$"]
      }
    ],

    // Express-specific
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^(req|res|next|err)$"
      }
    ],
    "consistent-return": "off",
    "no-else-return": ["error", { "allowElseIf": true }],
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 3 }]
  }
}
